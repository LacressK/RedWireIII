{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
	<div class="container-fluid">
		<div class="row justify-content-center">
			<div class="card mt-3 shadow">
				<div class="card-body">
					<h1 class="card-title">S'enregistrer</h1>
					<div class="row justify-content-center">
						{{ form_start(registrationForm) }}
						{{ form_row(registrationForm.email) }}
						{{ form_row(registrationForm.firstName,{ 'label' : 'Pr√©nom' }) }}
						{{ form_row(registrationForm.lastName, { 'label' : 'Nom' }) }}
						{{ form_row(registrationForm.password.first, { 'label' : 'Mot de passe' }) }}
						{{ form_row(registrationForm.password.second, { 'label' : 'Confirmation du mot de passe' }) }}
						<br>
						<button class="btn btn-lg btn-primary">S'enregistrer</button>
						{{ form_end(registrationForm) }}
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
