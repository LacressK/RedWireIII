{% block _annonce_images_widget %}
    <ul id="images-fields-list"
        data-prototype="{{ form_widget(prototype)|e }}"
        data-widget-tags="{{ '<li></li>'|e }}"
        data-widget-counter="{{ value|length }}"
    >
        {% for key,imageForm in form.children %}
            {{ form_row(imageForm, {'label': 'Image'}) }}
        {% endfor %}
    </ul>

    <button type="button"
            class="add-another-collection-widget btn btn-primary"
            data-list-selector="#images-fields-list"><i class="fas fa-image"></i> Ajouter une nouvelle image
    </button>
{% endblock %}
