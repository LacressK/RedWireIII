{% extends 'base.html.twig' %}

{% block title %}Modification d'Annonce{% endblock %}

{% block body %}
    <div class="row justify-content-center">
        <div class="col-10">
            <div class="card bg-light shadow">
                <div class="card-header">
                    <h1>Modification d'Annonce</h1>
                </div>
                <div class="card-body">
                    {{ include('annonce/_form.html.twig', {'button_label': 'Mettre à jour'}) }}
                </div>

            </div>

            <a href="{{ path('annonce_index') }}" class="btn btn-secondary mt-2 shadow"><i
                        class="fas fa-clipboard-list"></i>
                Retour à la liste</a>
            {{ include('annonce/_delete_form.html.twig') }}
        </div>
    </div>

{% endblock %}

{% block stylesheets %}
    <style>
        img {
            height: 200px;
        }
    </style>
{% endblock %}

